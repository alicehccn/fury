html
  include head
  body
    div(class='mt-5')
      div(class='pl-3 mb-3')
        a(href='/') <<
      div(style='text-align: center;')
        h5=title.toUpperCase()
      table(class='table mt-2')
        each chapter in chapters
          tr(style='text-align: left;')
            td
              if chapter.suffix
                a(href='/character/' + chapter.name)=chapter.name
              else
                span=chapter.name
            td=chapter.suffix
            td(style='text-align: right;')=chapter.page
