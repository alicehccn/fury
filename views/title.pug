html
  include head
  body(style='background-color: #22272e; color: #adbac7')
    div(class='mt-5' style='max-width: 980px; margin: auto')
      a(class='pl-3' href='/') <<
      h5(class='text-center')=title
      table(class='table table-dark mt-3 font-weight-light')
        each ch in chapters
          tr
            td(style='max-width: 150px')
              if ch.character
                a(href='/character/' + ch.character)=ch.pov
              else
                span=ch.pov
            td=ch.suffix
            td(class='font-italic text-muted' style='font-size: 14px')=ch.headline || ch.location
            td(class='text-right')
              span=ch.page
