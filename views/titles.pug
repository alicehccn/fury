html
  head
    include head
  body(style='background-color: #22272e; color: #adbac7')
    div(class='mt-5' style='max-width: 980px; margin: auto')
      h1(class='page-header mb-5 text-center') Index of Ice and Fire
      div(class='mt-5')
        for title, k in titles
          h5
            a(href='/title/'+k)=key
          table(class='table mt-3 table-dark text-left')
            tr
              td(class='align-middle text-left')
                a(href='/title/'+title[0].slug class='text-uppercase')=title[0].slug
              td
                each ch in title
                  span(class='mr-2 mb-2 d-inline-block')
                    a(href='/character/'+ch.character)=ch.character
                    sup=ch.count
