html
  head
    include head
  body(style='background-color: #22272e; color: #adbac7')
    div(style='max-width: 980px; margin: auto')
      div(class='sticky-top py-4 pl-2 page-header text-center' style='background-color: #22272e; height: fit-content')
        h4 Index of Ice and Fire
      div(class='mb-5')
        for title, k in titles
          table(class='table table-dark text-left' style='color: #adbac7')
            tr
              td(class='align-middle text-center w-50 bg-secondary text-uppercase')
                a(style='color: #8ab4f8' href='/title/'+title[0].slug)=title[0].title
              td
                each ch in title
                  span(class='mr-2 mb-2 d-inline-block')
                    span=ch.character
                    sup
                      a(style='color: #8ab4f8' href='/character/'+ch.character)=ch.count
    include footer
