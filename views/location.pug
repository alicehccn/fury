html
  include head
  body(style='background-color: #22272e; color: #d8d4cf')
    div(class='mt-5' style='max-width: 980px; margin: auto')
      div(class='pl-1')
        h2(class='pl-2 mb-4')=header
        table(class='table table-dark text-left' style='font-size: 15px')
          tr
            td(class='w-25') Continent
            td=continent
          tr 
            td Chapters
            td=total
          tr 
            td Appearances
            td
              each chr in appearance
                span(class='mr-2 mb-2 d-inline-block')
                  a(href='/character/' + chr.character)=chr.character 
      div(class='mt-5 text-center')
        for val, key in chapters
          h5
            a(href='/title/'+val[0].slug)=key
          table(class='table table-dark mb-5 mt-3' style='font-size: 15px')
            each chp in val
              tr
                td(class='w-25 text-nowrap')=chp.pov
                td=chp.suffix
                td(class='font-italic text-muted d-none d-sm-block' style='font-size: 14px')=chp.headline
                td(class='text-right')
                  span=chp.page
